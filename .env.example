# ===========================================
# GitHub Activity Stream Analyzer
# Environment Configuration
# ===========================================

# GitHub API Configuration
# Comma-separated list of GitHub personal access tokens for rate limit rotation
# Generate tokens at: https://github.com/settings/tokens
# Each token provides 5,000 requests/hour
GITHUB_TOKENS=ghp_your_token_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9094
KAFKA_TOPIC=github-events-raw
KAFKA_CONSUMER_GROUP=github-processor

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=github_analytics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Ingestion Configuration
POLL_INTERVAL=10

# Processor Configuration
BATCH_SIZE=100

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
